@model Product

<h3>@Model.Name Information </h3>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
    </tr>
    <tr>
        <td>@Model.ProductID</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.CategoryID</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Order/Index/">Add to Cart</a>
</div>